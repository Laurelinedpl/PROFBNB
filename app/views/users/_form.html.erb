<%= simple_form_for user, html: { multipart: true } do |f| %>
  <div class="mb-3">
    <%= f.input :last_name, label: "Nom", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :first_name, label: "Prénom", input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :email, label: "Email", input_html: { class: "form-control" } %>
  </div>

  <h3 class="mt-4">Changer de mot de passe</h3>

  <div class="mb-3">
    <%= f.input :current_password, label: "Mot de passe actuel", as: :password, input_html: { class: "form-control", autocomplete: "current-password" } %>
    <small class="text-muted">Obligatoire pour modifier le mot de passe</small>
  </div>

  <div class="mb-3">
    <%= f.input :password, label: "Nouveau mot de passe", as: :password, input_html: { class: "form-control", autocomplete: "new-password" } %>
  </div>

  <div class="mb-3">
    <%= f.input :password_confirmation, label: "Confirmer le nouveau mot de passe", as: :password, input_html: { class: "form-control" } %>
  </div>

  <div class="mb-3">
    <%= f.input :photo, as: :file, label: "Photo" %>
  </div>

  <%= f.submit "Mettre à jour", class: "btn btn-success" %>
<% end %>

