<h1>Profil de <%= @user.last_name %> <%= @user.first_name %></h1>

<p><strong>Email :</strong> <%= @user.email %></p>

<% if current_user == @user || current_user.admin? %>
  <%= link_to 'Modifier', edit_user_path(@user), class: "btn btn-primary" %>
  <%= button_to 'Supprimer', @user, method: :delete, data: { confirm: 'Es-tu sûr ?' }, class: "btn btn-danger" %>
<% end %>

<h2>Réservations</h2>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Teacher</th>
      <th>Date</th>
      <th>Statut</th>
    </tr>
  </thead>
  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.teacher.first_name %> <%= booking.teacher.last_name %></td>
        <td><%= booking.date %></td>
        <td><%= booking.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Retour', root_path, class: "btn btn-secondary" %>
