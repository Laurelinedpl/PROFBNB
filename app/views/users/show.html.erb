<div style= "height: 130vh;">
  <div class="container m-3 text-center">
    <div class="row">
      <div class="col-4 profile border p-3">
        <%= cl_image_tag current_user.photo.key, class:"rounded-circle border border-info-subtle" %>
        <p><strong><%= @user.last_name %> <%= @user.first_name %></strong></p>
        <p>Etudiante Le Wagon </p>
        <p><%= @user.email %></p>
        <ul class="list-group list-group-horizontal">
          <li><a href="#"><i class="fa-brands fa-facebook m-1"></i></a></li>
          <li><a href="#"><i class="fa-brands fa-twitter m-1"></i></a></li>
          <li><a href="#"><i class="fa-brands fa-linkedin m-1"></i></a></li>
          <li><a href="#"><i class="fa-brands fa-instagram m-1"></i></a></li>
        </ul>

        <% if current_user == @user || current_user.admin? %>
          <%= link_to 'Modifier', edit_user_path(@user), class: "btn btn-primary" %>
          <%# <%= button_to 'Supprimer', @user, method: :delete, data: { confirm: 'Es-tu sûr ?' }, class: "btn btn-primary" %>
        <% end %>
      </div>

      <div class="col-8 booking border p-3">
        <h2>Reservations</h2>
        <div class="cards-users">
          <% @bookings.each do |booking|  %>
          <div class="card-user" style="width: 18rem;">
            <%# <img src="https://images2.imgbox.com/45/2c/1oCvUPLa_o.png" class="card-img-top" alt="teacher"> %>
            <%= cl_image_tag booking.teacher.photo.key, class:"card-img-top" %>
            <div class="card-body">
              <h5 class="card-title"> <%= booking.teacher.first_name %> <%= booking.teacher.last_name%>
            </h5>
              <p class="card-text">Date: <%= booking.date %></p>
              <p class="card-text">Statut: <%= booking.status %></p>
              <%= button_to 'Annuler', booking_path(booking), method: :delete, data: { confirm: 'Es-tu sûr ?' }, class: "btn btn-primary" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
